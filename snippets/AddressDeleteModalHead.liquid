<address-delete-modal-head
  class='address-delete-modal-head'
  data-address-item-id='address-{{ address_id }}'
>
  <div class='address-delete-modal-head__body'>
    <span class='text text--headline text--h3 address-delete-modal-head__title'>
      {{ 'account.delete_address' | t }}
    </span>
  </div>
  <button
    class='button button--outlined address-delete-modal-head__close-btn js-address-delete-modal-head__close-btn button--width-auto button--padding-md'
    type='button'
    aria-label='{{ 'account.delete_address_modal_aria_label' | t }}'
  >
    <svg
      class='icon js-icon'
      width='22'
      height='22'
      aria-hidden='true'
    >
      <use xlink:href='#close'></use>
    </svg>
  </button>
</address-delete-modal-head>